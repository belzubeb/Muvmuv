<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFilmFragment"
    android:background="@color/Primary">
    <ScrollView
        android:id="@+id/scrollDetail2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/pictdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detailfight"/>
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrowleft"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="9dp"
                    android:clickable="true"
                    android:focusable="true"
                    />
                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="123dp"
                    android:layout_height="185dp"
                    android:src="@drawable/posterfightclub"
                    android:layout_marginStart="249dp"
                    android:layout_marginTop="155dp"/>
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fight Club"
                    android:layout_below="@id/pictdetail"
                    android:textSize="20sp"
                    android:textColor="@color/Black"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="6dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="195dp"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/pictdetail">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8/10"
                        android:textSize="11sp"
                        android:fontFamily="@font/medium"
                        android:textColor="@color/Tangerine"
                        android:layout_gravity="center"
                        tools:ignore="SmallSp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1999 â€¢ DIRECTED BY"
                    android:layout_below="@+id/Title"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/Black"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/Direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David Fincher"
                    android:layout_below="@+id/year"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/Black"/>
                <Button
                    android:id="@+id/btntrailer"
                    android:layout_width="74.19dp"
                    android:layout_height="22.79dp"
                    android:background="@drawable/buttontrailer"
                    android:layout_below="@id/Direct"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2hr 19min"
                    android:layout_below="@id/Direct"
                    android:layout_toEndOf="@id/btntrailer"
                    android:layout_marginStart="5.81dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/Black"
                    android:layout_marginTop="9dp"/>
                <TextView
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:text="Sulit tidur dan bosan dengan rutinitasnya, seorang pekerja kantoran membentuk sebuah klub pertarungan terlarang bersama rekannya. Namun, segalanya berubah menjadi tak terkendali dan sangat berbahaya."
                    android:layout_below="@id/btntrailer"
                    android:textSize="11sp"
                    android:fontFamily="@font/medium"
                    android:layout_marginTop="18.21dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/Black"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/sinopsis"
                    android:justificationMode="inter_word"/>
                <Button
                    android:id="@+id/genre"
                    android:layout_width="57dp"
                    android:layout_height="23dp"
                    android:background="@drawable/button_genre"
                    android:text="Drama"
                    android:textColor="@color/Tangerine"
                    android:textSize="12sp"
                    android:fontFamily="@font/medium"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:layout_below="@id/sinopsis"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"/>
                <TextView
                    android:id="@+id/wheretowatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genre"
                    android:textSize="15sp"
                    android:text="Where to watch?"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/Black"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="20dp"/>
                <LinearLayout
                    android:id="@+id/watch"
                    android:layout_below="@id/wheretowatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/netflix"
                        android:clickable="true"
                        android:layout_width="85.24dp"
                        android:layout_height="33.9dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/netflix" />
                    <ImageView
                        android:id="@+id/prime"
                        android:clickable="true"
                        android:layout_width="92.51dp"
                        android:layout_height="33.9dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/prime" />
                    <ImageView
                        android:id="@+id/hulu"
                        android:clickable="true"
                        android:layout_width="92.51dp"
                        android:layout_height="33.9dp"
                        android:src="@drawable/hulu"/>
                </LinearLayout>
                <Button
                    android:id="@+id/buttonadd"
                    android:layout_width="353dp"
                    android:layout_height="34dp"
                    android:layout_below="@id/watch"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_oren"
                    android:text="+  Add this film"
                    android:layout_marginTop="20.1dp"
                    android:textAllCaps="false"
                    android:textColor="@color/Primary"
                    />
                <Button
                    android:id="@+id/reviews"
                    android:layout_width="353dp"
                    android:layout_height="34dp"
                    android:layout_below="@id/buttonadd"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:width="353dp"
                    android:background="@drawable/button_putih"
                    android:text="Reviews"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Tangerine"
                    android:onClick="reviews"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simmilliar with this film"
                android:fontFamily="@font/bold"
                android:textColor="@color/Black"
                android:layout_marginStart="20dp"/>
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka" />
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka" />
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka" />
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka"
                        android:layout_marginEnd="20dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>