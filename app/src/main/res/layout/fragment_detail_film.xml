<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFilmFragment"
    android:background="@color/Primary">
    <ScrollView
        android:id="@+id/scrollDetail2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/pctdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/detailfight"/>
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrowleft"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="9dp"
                    android:clickable="true"
                    android:focusable="true"
                    />

                <ImageView
                    android:layout_width="99dp"
                    android:layout_height="149dp"
                    android:src="@drawable/posterfightclub"
                    android:layout_marginStart="249dp"
                    android:layout_marginTop="155dp"/>
                <TextView
                    android:id="@+id/txtFight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fight Club"
                    android:layout_below="@id/pctdetail"
                    android:textSize="20sp"
                    android:textColor="@color/Black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star"
                    android:layout_below="@id/pctdetail"
                    android:layout_marginStart="195dp"
                    android:layout_marginTop="11dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8/10"
                    android:layout_below="@id/pctdetail"
                    android:textSize="10sp"
                    android:layout_marginStart="215dp"
                    android:textColor="@color/Tangerine"
                    android:layout_marginTop="11dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/txtThn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1999 â€¢ DIRECTED BY"
                    android:layout_below="@+id/txtFight"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/Black"
                    android:textSize="11sp"/>
                <TextView
                    android:id="@+id/txtDirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David Fincher"
                    android:layout_below="@+id/txtThn"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="20sp"
                    android:textColor="@color/Black"/>
                <TextView
                    android:id="@+id/btntrailer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAILER"
                    android:background="@drawable/rectanglegenre"
                    android:layout_below="@id/txtDirect"
                    android:layout_marginStart="20dp"
                    android:textSize="10sp"
                    android:textColor="@color/Tangerine"
                    android:layout_marginTop="6dp"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDirect"
                    android:layout_marginStart="33.24dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/play" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2hr 19min"
                    android:layout_below="@id/txtDirect"
                    android:layout_marginStart="100dp"
                    android:textSize="10sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="9dp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:layout_width="354dp"
                    android:layout_height="60dp"
                    android:text="Sulit tidur dan bosan dengan rutinitasnya, seorang pekerja kantoran membentuk sebuah klub pertarungan terlarang bersama rekannya. Namun, segalanya berubah menjadi tak terkendali dan sangat berbahaya."
                    android:layout_below="@id/btntrailer"
                    android:textSize="12sp"
                    android:layout_marginTop="30.21dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/Black"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/RingkasDetail"
                    android:justificationMode="inter_word"/>
                <TextView
                    android:id="@+id/wheretowatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RingkasDetail"
                    android:textSize="15sp"
                    android:text="Where to watch?"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/Black"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="20dp"/>
                <LinearLayout
                    android:id="@+id/watch"
                    android:layout_below="@id/wheretowatch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/netflix"
                        android:clickable="true"
                        android:layout_width="92.51dp"
                        android:layout_height="33.9dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/netflix" />
                    <ImageView
                        android:id="@+id/prime"
                        android:clickable="true"
                        android:layout_width="92.51dp"
                        android:layout_height="33.9dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/prime" />
                    <ImageView
                        android:id="@+id/hulu"
                        android:clickable="true"
                        android:layout_width="92.51dp"
                        android:layout_height="33.9dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/hulu"/>
                </LinearLayout>
                <Button
                    android:id="@+id/buttonadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/watch"
                    android:layout_centerHorizontal="true"
                    android:width="353dp"
                    android:background="@drawable/button_oren"
                    android:text="+  add this film"
                    android:layout_marginTop="30.1dp"
                    android:textColor="@color/Primary"
                    />
                <Button
                    android:id="@+id/reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonadd"
                    android:layout_centerHorizontal="true"
                    android:width="353dp"
                    android:background="@drawable/button_putih"
                    android:text="Reviews"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/Tangerine"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simmilliar with this film"
                android:textColor="@color/Black"
                android:layout_marginStart="20dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp">
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="98dp"
                        android:layout_height="147dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/wonka"
                        android:clickable="true"
                        android:layout_marginEnd="20dp"/>
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>