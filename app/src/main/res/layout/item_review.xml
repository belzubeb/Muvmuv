<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoprofile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="31.5dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81.5dp"
        android:textColor="@color/Black"
        android:layout_marginTop="4.5dp"/>
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81.5dp"
        android:layout_marginTop="22.5dp"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="9.5dp"
        android:textColor="@color/Black"
        android:layout_marginStart="81.5dp"/>
    <ImageView
        android:layout_width="14dp"
        android:layout_height="22dp"
        android:src="@drawable/star"
        android:layout_below="@id/email"
        android:layout_marginStart="324.5dp"
        android:layout_marginTop="9.5dp"/>
    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="343.5dp"
        android:layout_marginTop="9.5dp"/>
    <TextView
        android:id="@+id/isiReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:layout_below="@id/title"
        android:layout_marginStart="81.5dp"
        android:layout_marginEnd="31.5dp"
        android:layout_marginTop="6dp"/>

</RelativeLayout>
