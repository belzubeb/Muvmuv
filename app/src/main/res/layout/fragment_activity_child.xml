<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityFragmentChild">

    <ImageView
        android:id="@+id/avaact1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/fotoprofile"/>

    <TextView
        android:id="@+id/user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="akhdan wathecd"
        android:layout_toEndOf="@id/avaact1"
        android:layout_marginTop="22dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/Black"/>
    <TextView
        android:id="@+id/titleact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fighter"
        android:layout_below="@id/user1"
        android:layout_marginTop="7dp"
        android:layout_marginStart="66dp"
        android:textColor="@color/Black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:text="2024"
        android:layout_below="@id/user1"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"/>

    <LinearLayout
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/titleact1"
        android:layout_marginStart="66dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/star"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/poster1"
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:layout_below="@id/star1"
        android:layout_marginStart="66dp"
        android:src="@drawable/fightercard"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/poster1"
        android:layout_below="@id/star1"
        android:paddingStart="11dp"
        android:text="wowwww biasa saja filmnya tp durden keren kusuka durden soalnya dia sangat keren dang sangat skenaaa bjirrrr sinefill bgttt nontoon iniiiiiiii senannggggggg!!!"
        android:justificationMode="inter_word"
        android:paddingEnd="30dp"
        android:textColor="@color/Black"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/poster1"/>

    <ImageView
        android:id="@+id/avaact2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/divider1"
        android:src="@drawable/fotoprofile"/>

    <TextView
        android:id="@+id/user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="akhdan wathecd"
        android:layout_toEndOf="@id/avaact1"
        android:layout_marginTop="22dp"
        android:layout_marginStart="12dp"
        android:layout_below="@id/divider1"
        android:textColor="@color/Black"/>
    <TextView
        android:id="@+id/titleact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fighter"
        android:layout_below="@id/user2"
        android:layout_marginTop="7dp"
        android:layout_marginStart="66dp"
        android:textColor="@color/Black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:text="2024"
        android:layout_below="@id/user2"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"/>

    <LinearLayout
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/titleact2"
        android:layout_marginStart="66dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/star"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/poster2"
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:layout_below="@id/star2"
        android:layout_marginStart="66dp"
        android:src="@drawable/fightercard"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/poster2"
        android:layout_below="@id/star2"
        android:paddingStart="11dp"
        android:text="wowwww biasa saja filmnya tp durden keren kusuka durden soalnya dia sangat keren dang sangat skenaaa bjirrrr sinefill bgttt nontoon iniiiiiiii senannggggggg!!!"
        android:justificationMode="inter_word"
        android:paddingEnd="30dp"
        android:textColor="@color/Black"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B6B6B6"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/poster2"/>

</RelativeLayout>